<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tripaza" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    
<!-- INPUT -->
    <style name="text_input_layout">
        <item name="errorEnabled">true</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="hintEnabled">false</item>
        <item name="boxBackgroundMode">none</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="input_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@drawable/rounded_background</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="maxLines">1</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="input_field.password">
        <item name="android:ems">10</item>
        <item name="android:inputType">textPassword</item>
    </style>
    
<!-- TEXT -->
    <style name="text">
        <item name="fontFamily">sans-serif</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="text.h1">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style><style name="text.h2">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style><style name="text.h3">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text.p1">
        <item name="android:textSize">32sp</item>
    </style>
    <style name="text.p2">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="text.p3">
        <item name="android:textSize">16sp</item>
    </style>
    
<!-- BUTTON -->
    <style name="button">
        <item name="android:textSize">21sp</item>
        <item name="background">@drawable/rounded_button</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="button.wide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:layout_marginStart">24sp</item>
        <item name="android:layout_marginEnd">24sp</item>
        <item name="android:textSize">21sp</item>
    </style>
    
    
<!-- SEPARATOR -->
    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">32sp</item>
        <item name="android:layout_marginEnd">32sp</item>
        <item name="android:src">@drawable/separator_line</item>
    </style>
</resources>