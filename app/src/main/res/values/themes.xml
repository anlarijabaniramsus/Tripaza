<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Tripaza" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    
    
<!-- INPUT -->
    <style name="text_input_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="boxBackgroundColor">@color/light_grey</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="android:padding">1dp</item>
        <item name="boxStrokeColor">#000000ff</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="errorEnabled">false</item>
        <item name="boxStrokeErrorColor">@color/error</item>
        <item name="boxStrokeWidth">0dp</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="hintEnabled">false</item>
    </style>
    
    
    <style name="input_field">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="background">@null</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="maxLines">1</item>
        <item name="android:ems">10</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="input_field.password">
        <item name="android:ems">10</item>
        <item name="android:inputType">textPassword</item>
    </style>
    
<!-- TEXT -->
    <style name="text">
        <item name="fontFamily">sans-serif</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="text.h1">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style><style name="text.h2">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style><style name="text.h3">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text.p1">
        <item name="android:textSize">32sp</item>
    </style>
    <style name="text.p2">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="text.p3">
        <item name="android:textSize">16sp</item>
    </style>
    
<!-- BUTTON -->
    <style name="button">
        <item name="android:textSize">21sp</item>
        <item name="background">@drawable/rounded_button</item>
        <item name="backgroundTint">@color/primary_blue</item>
        <item name="textAllCaps">false</item>
    </style>
    <style name="button.wide">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:layout_marginStart">24sp</item>
        <item name="android:layout_marginEnd">24sp</item>
        <item name="android:textSize">21sp</item>
    </style>
    
    
<!-- SEPARATOR -->
    <style name="separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">24dp</item>
        <item name="android:layout_marginEnd">24dp</item>
        <item name="android:src">@drawable/separator_line</item>
    </style>
    
<!-- SPECIFIC ITEM STYLE -->
<!-- PROFILE FRAGMENT -->
    <style name="profile_list_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="profile_list_item_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:clickable">true</item>
        <item name="android:paddingEnd">24dp</item>
        <item name="android:paddingStart">24dp</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    <style name="profile_list_text_layout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">0.99</item>
        <item name="android:orientation">vertical</item>
    </style>
    <style name="profile_list_text_header" parent="text.h3">
        <item name="android:textColor">@color/dark_grey</item>
    </style>
    <style name="profile_list_text_value" parent="text.p3">
        <item name="android:textSize">20dp</item>
    </style>
    <style name="profile_list_item_btn">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:src">@drawable/ic_pen_to_square_solid</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <!--ONBOARDING-->
    <style name="onboarding">
        <item name="android:background">@null</item>
    </style>
    
    <!--PREFERENCES-->
    <!--this is for parent only, this help organize our style-->
    <style name="preference"></style>
    
    <style name="preference.icon">
        <item name="android:layout_width">32dp</item>
        <item name="android:layout_height">32dp</item>
        <item name="android:tint">@color/primary_blue_dark</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="srcCompat">@drawable/ic_home_black_24dp</item>
    </style>

    <style name="preference.title" parent="text.p2">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_weight">0.8</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>
    
</resources>